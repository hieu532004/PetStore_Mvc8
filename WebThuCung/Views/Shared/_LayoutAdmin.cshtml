    <script type="text/javascript">

        $(document).ready(function () {
            $.ajax({
                url: '/Admin/CheckAuthentication',
                success: function (response) {
                    console.log(response);

                    if (response.isAuthenticated) {
                        const avatarUrl = "/admin/img/" + response.avatar;

                        $('.in_login').remove();
                        if (response.isadmin) {

                            // Nếu người dùng là Candidate
                            $('.wrap_login').html(`
                                                <li class="has-children">
                                                    <img class="avatar_imgadmin" src="${avatarUrl}" alt="Admin Avatar"></img>
                                                    <ul class="profileavataradmin">
                                                        <li><a href="/Admin/Profile">Hồ sơ</a></li>

                                                        <li><a class="logout1" href="#">Đăng xuất</a></li>
                                                    </ul>
                                                </li>
                                                `);
                        }else if (response.isShipper) {
