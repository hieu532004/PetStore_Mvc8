                <script>

                    function typeText(element, text, interval, loop) {
                        let index = 0;

                        function typeNextChar() {

                            element.setAttribute("placeholder", text.substring(0, index + 1));
                            index++;


                            if (index < text.length) {
                                setTimeout(typeNextChar, interval);
                            } else if (loop) {

                                setTimeout(function () {
                                    index = 0;
                                    typeNextChar();
                                }, 1000);
                            }
                        }

                        typeNextChar();
                    }

                    document.addEventListener("DOMContentLoaded", function () {
                        const searchInput = document.getElementById("search-input");
                        const textToType = "Search Here.....";
                        const typingInterval = 150;
                        const loop = true;
                        typeText(searchInput, textToType, typingInterval, loop);
                    });

                </script>
