@model IEnumerable<WebThuCung.Models.Supplier>
@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách nhà cung cấp</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item">Nhà cung cấp</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách nhà cung cấp</h5>

                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Tạo nhà cung cấp mới
                            </a>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên nhà cung cấp</th>
                                    <th>Điện thoại</th>
                                    <th>Địa chỉ</th>
                                    <th>Email</th>
                                    <th>Ảnh đại diện</th>
                                    <th>Sửa</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var supplier in Model)
                                    {
                                        <tr>
                                            <td>@supplier.idSupplier</td>
                                            <td>@supplier.nameSupplier</td>
                                            <td>@supplier.Phone</td>
                                            <td>@supplier.Address</td>
                                            <td>@supplier.Email</td>
                                            <td>
                                                <img src="~/images/Customer/@supplier.Image" alt="Ảnh nhà cung cấp" style="width: 100px; height: auto;" />
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@supplier.idSupplier" class="btn btn-warning btn-sm">Sửa</a>
                                            </td>
                                            <td>
                                                <form asp-action="Delete" asp-route-id="@supplier.idSupplier" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa nhà cung cấp này không?');">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">Không tìm thấy nhà cung cấp nào.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
