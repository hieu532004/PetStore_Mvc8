@model IEnumerable<WebThuCung.Models.Ward>
@{
    ViewData["Title"] = "Ward List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Ward List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Ward</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ward List</h5>

                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Ward</a>
                        </div>
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Ward Name</th>
                                    <th>District</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ward in Model)
                                {
                                    <tr>
                                        <td>@ward.idWard</td>
                                        <td>@ward.nameWard</td>
                                        <td>@ward.District?.nameDistrict</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@ward.idWard" class="btn btn-warning btn-sm">Edit</a>
                                            <form asp-action="Delete" asp-route-id="@ward.idWard" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this ward?');">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
