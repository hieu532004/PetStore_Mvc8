@model IEnumerable<WebThuCung.Models.VoteWarehouse>

@{
    ViewData["Title"] = "Kho Phiếu Bầu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Kho Phiếu Bầu</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang Chủ</a></li>
                <li class="breadcrumb-item active">Kho Phiếu Bầu</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh Sách Kho Phiếu Bầu</h5>

                        <!-- Create New VoteWarehouse Button -->
                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary">Tạo Mới Kho Phiếu Bầu</a>
                        </div>

                        <!-- Table to display VoteWarehouse -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Mã Kho Phiếu Bầu</th>
                                    <th>Ngày Nhập</th>
                                    <th>Mã Nhà Cung Cấp</th>
                                    <th>Tổng Phiếu Bầu</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.idVotewarehouse">@item.idVotewarehouse</a>
                                             </td>
                                        <td>@item.dateEntry.ToString("yyyy-MM-dd")</td>
                                        <td>@item.idSupplier</td>
                                        <td>@item.totalVoteWarehouse?.ToString("C")</td>
                                        <td>
                                            <!-- Nút Sửa -->
                                            <a asp-action="Edit" asp-route-id="@item.idVotewarehouse" class="btn btn-warning btn-sm">Sửa</a>
                                            <!-- Nút Xóa -->

                                        </td>
                                        <td>
                                            <!-- Nút Xóa -->

                                            <form asp-action="Delete" asp-route-id="@item.idVotewarehouse" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa Kho Phiếu Bầu này không?');">Xóa</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
