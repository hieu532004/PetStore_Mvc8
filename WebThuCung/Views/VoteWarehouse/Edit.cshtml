@model WebThuCung.Dto.VoteWarehouseDto

@{
    ViewData["Title"] = "Chỉnh sửa kho phiếu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Chỉnh sửa kho phiếu</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item active"><a asp-controller="VoteWarehouse" asp-action="Index">Kho phiếu</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chỉnh sửa kho phiếu</h5>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Vote Warehouse Form -->
                        <form asp-action="Edit" method="post">
                            @* <input type="hidden" asp-for="idVoteWarehouse" /> *@

                            <!-- Date Entry -->
                            <div class="row mb-3">
                                <label asp-for="idVoteWarehouse" class="col-sm-2 col-form-label">Mã kho phiếu</label>
                                <div class="col-sm-10">
                                    <!-- Trường hiển thị ID, chỉ đọc -->
                                    <input asp-for="idVoteWarehouse" class="form-control" readonly/>
                                    <!-- Hiển thị lỗi nếu có -->
                                    @* <span asp-validation-for="idSize" class="text-danger"></span> *@
                                </div>
                            </div>
                           

                            <!-- Supplier ID -->
                            <div class="row mb-3">
                                <label asp-for="idSupplier" class="col-sm-2 col-form-label">Nhà cung cấp</label>
                                <div class="col-sm-10">
                                    <select asp-for="idSupplier" class="form-control" required>
                                        <option value="">-- Chọn nhà cung cấp --</option>
                                        @foreach (var supplier in ViewBag.Suppliers as List<SelectListItem>)
                                        {
                                            <option value="@supplier.Value" >@supplier.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="idSupplier" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Quantity -->
               

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                                </div>
                            </div>
                        </form><!-- End Edit Vote Warehouse Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
