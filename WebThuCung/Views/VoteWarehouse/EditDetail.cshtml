@model WebThuCung.Dto.DetailVoteWarehouseDto

@{
    ViewData["Title"] = "Chỉnh sửa chi tiết phiếu kho";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Chỉnh sửa chi tiết phiếu kho</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="VoteWarehouse" asp-action="Detail" asp-route-id="@Model.idVoteWarehouse">Chi tiết phiếu kho</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chỉnh sửa chi tiết phiếu kho</h5>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Detail VoteWarehouse Form -->
                        <form asp-action="EditDetail" method="post">
                            <!-- Vote Warehouse ID (readonly) -->
                            <div class="row mb-3">
                                <label asp-for="idVoteWarehouse" class="col-sm-2 col-form-label">Mã phiếu</label>
                                <div class="col-sm-10">
                                    <input asp-for="idVoteWarehouse" class="form-control" readonly />
                                    <span asp-validation-for="idVoteWarehouse" class="text-danger"></span>
                                    <!-- Hidden field for ID -->
                                    <input type="hidden" asp-for="idVoteWarehouse" />
                                </div>
                            </div>

                            <!-- Product Selection -->
                            <div class="row mb-3">
                                <label asp-for="idProduct" class="col-sm-2 col-form-label">Sản phẩm</label>
                                <div class="col-sm-10">
                                    <select asp-for="idProduct" class="form-control" required>
                                        <option value="">-- Chọn sản phẩm --</option>
                                        @foreach (var product in ViewBag.Products as List<SelectListItem>)
                                        {
                                            <option value="@product.Value">@product.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="idProduct" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Quantity -->
                            <div class="row mb-3">
                                <label asp-for="Quantity" class="col-sm-2 col-form-label">Số lượng</label>
                                <div class="col-sm-10">
                                    <input asp-for="Quantity" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Purchase Price -->
                            <div class="row mb-3">
                                <label asp-for="purchasePrice" class="col-sm-2 col-form-label">Giá mua</label>
                                <div class="col-sm-10">
                                    <input asp-for="purchasePrice" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="purchasePrice" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Total Price (readonly) -->
                            <div class="row mb-3">
                                <label asp-for="totalPrice" class="col-sm-2 col-form-label">Tổng giá</label>
                                <div class="col-sm-10">
                                    <input asp-for="totalPrice" class="form-control" readonly />
                                    <span asp-validation-for="totalPrice" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                    <a asp-action="Detail" asp-route-id="@Model.idVoteWarehouse"
                                       class="btn btn-primary">Quay lại</a>
                                </div>
                            </div>
                           
                        </form><!-- End Edit Detail VoteWarehouse Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
