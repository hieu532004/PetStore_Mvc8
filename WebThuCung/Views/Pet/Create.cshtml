@model WebThuCung.Dto.PetDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Create Pet</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Pet" asp-action="Index">Pet</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create New Pet</h5>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Create Pet Form -->
                        <form asp-action="Create" method="post">
                            <!-- Pet ID -->
                            <div class="row mb-3">
                                <label asp-for="idPet" class="col-sm-2 col-form-label">Pet ID</label>
                                <div class="col-sm-10">
                                    <input asp-for="idPet" class="form-control" required />
                                    <span asp-validation-for="idPet" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Pet Name -->
                            <div class="row mb-3">
                                <label asp-for="namePet" class="col-sm-2 col-form-label">Pet Name</label>
                                <div class="col-sm-10">
                                    <input asp-for="namePet" class="form-control" required />
                                    <span asp-validation-for="namePet" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Create Pet</button>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <a asp-action="Index"
                                       class="btn btn-primary">Back</a>
                                </div>
                            </div>
                        </form><!-- End Create Pet Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>