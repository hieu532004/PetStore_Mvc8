@model WebThuCung.Dto.ColorDto
@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Color" asp-action="Index">Màu sắc</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chỉnh sửa màu sắc</h5>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Color Form -->
                        <form asp-action="Edit" method="post">
                            <!-- Color ID (readonly) -->
                            <div class="row mb-3">
                                <label for="inputIdColor" class="col-sm-2 col-form-label">Mã màu</label>
                                <div class="col-sm-10">
                                    <!-- Trường hiển thị ID, chỉ đọc -->
                                    <input type="text" class="form-control" id="inputIdColor" name="idColorReadonly" value="@Model.idColor" readonly />

                                    <!-- Trường ẩn để gửi ID -->
                                    <input type="hidden" name="idColor" value="@Model.idColor" />

                                    <span asp-validation-for="idColor" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Color Name -->
                            <div class="row mb-3">
                                <label for="inputNameColor" class="col-sm-2 col-form-label">Tên màu</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputNameColor" name="nameColor" value="@Model.nameColor" required />
                                    <span asp-validation-for="nameColor" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                                </div>
                            </div>
                          
                        </form><!-- End Edit Color Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
