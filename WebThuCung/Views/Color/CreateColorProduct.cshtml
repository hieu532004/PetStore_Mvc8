@model WebThuCung.Models.ProductColor

@{
    ViewData["Title"] = "Color List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Color" asp-action="Index">Color</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add Color for Product</h5>

                        <!-- Display validation summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Create Product Color Form -->
                        <form asp-action="CreateColorProduct" method="post">
                            <!-- Hidden field for Product ID -->
                            <input type="hidden" asp-for="idProduct" value="@ViewBag.ProductId" />

                            <!-- Color Selection -->
                            <div class="row mb-3">
                                <label asp-for="idColor" class="col-sm-2 col-form-label">Color</label>
                                <div class="col-sm-10">
                                    <select asp-for="idColor" class="form-control" required>
                                        <option value="">-- Select a Color --</option>
                                        @foreach (var Color in ViewBag.ColorList as List<SelectListItem>)
                                        {
                                            <option value="@Color.Value">@Color.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                    <a asp-action="ColorProduct" asp-route-id="@ViewBag.ProductId" class="btn btn-secondary">Back</a>
                                </div>
                            </div>
                          
                        </form><!-- End Create Product Color Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
