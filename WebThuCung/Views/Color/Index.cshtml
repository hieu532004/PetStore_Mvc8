@model IEnumerable<WebThuCung.Models.Color>
@{
    ViewData["Title"] = "Danh sách màu sắc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách màu sắc</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item">Màu sắc</li>
                <li class="breadcrumb-item active">Danh sách</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách màu sắc</h5>
                      
                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Tạo màu sắc mới
                            </a>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên màu sắc</th>
                                    <th>Sửa</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var color in Model)
                                    {
                                        <tr>
                                            <td>@color.idColor</td>
                                            <td>@color.nameColor</td>
                                            <td>
                                                <!-- Nút Edit -->
                                                <a asp-action="Edit" asp-route-id="@color.idColor" class="btn btn-warning btn-sm">Sửa</a>
                                                <!-- Nút Delete -->
                                            </td>
                                            <td>
                                                <!-- Nút Delete -->
                                                <form asp-action="Delete" asp-route-id="@color.idColor" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa màu sắc này không?');">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Không tìm thấy màu sắc nào.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
