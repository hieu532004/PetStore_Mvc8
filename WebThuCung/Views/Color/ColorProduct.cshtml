@model IEnumerable<WebThuCung.Models.ProductColor>

@{
    ViewData["Title"] = "Danh Sách Màu Sắc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Danh Sách Màu Sắc Cho Sản Phẩm</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang Chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Sản Phẩm</a></li>
                <li class="breadcrumb-item active">Màu Sắc</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh Sách Màu Sắc</h5>

                        <div class="mb-3">
                            <a asp-action="CreateColorProduct" asp-route-id="@ViewBag.ProductId" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Thêm Màu Mới
                            </a>
                        </div>

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>Sản Phẩm</th>
                                    <th>Màu Sắc</th>
                                   
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var color in Model)
                                    {
                                        <tr>
                                            <td>@color.Product.nameProduct</td> <!-- Display the product name -->
                                            <td>@color.Color.nameColor</td> <!-- Display the color name -->
                                            <!-- Edit Button -->
                                          
                                            <!-- Delete Button -->
                                            <td>
                                                <form asp-action="DeleteColorProduct" method="post" style="display:inline;">
                                                    <input type="hidden" name="idProduct" value="@color.idProduct" />
                                                    <input type="hidden" name="idColor" value="@color.idColor" />
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa màu này không?');">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">Không tìm thấy màu sắc nào.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
            >

                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                         
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
