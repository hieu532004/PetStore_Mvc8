@model IEnumerable<WebThuCung.Models.Branch>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách chi nhánh</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item">Chi nhánh</li>
                
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách chi nhánh</h5>
                        
                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Tạo mới chi nhánh
                            </a>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên chi nhánh</th>
                                    <th>Logo</th>
                                    <th>Chỉnh sửa</th>
                                    <th>Xóa</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var branch in Model)
                                    {
                                        <tr>
                                            <td>@branch.idBranch</td>
                                            <td>@branch.nameBranch</td>
                                            <td>
                                                <img src="~/images/brand-logo/@branch.Logo" alt="Branch Image" style="width: 100px; height: auto;" />
                                            </td>

                                            <td>
                                                <!-- Nút Edit -->
                                                <a asp-action="Edit" asp-route-id="@branch.idBranch" class="btn btn-warning btn-sm">Sửa</a>
                                                <!-- Nút Delete -->
                                              
                                            </td>
                                            <td>
                                                <!-- Nút Edit -->
                                              
                                                <form asp-action="Delete" asp-route-id="@branch.idBranch" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc là bạn muốn xóa chi nhánh này?');">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Không tìm thấy chi nhánh.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main --></main><!-- End #main -->
