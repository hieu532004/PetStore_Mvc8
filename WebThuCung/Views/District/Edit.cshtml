@model WebThuCung.Dto.DistrictDto

@{
    ViewData["Title"] = "Edit District";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="District" asp-action="Index">District</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Edit District</h5>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="idDistrict" />
                            <div class="row mb-3">
                                <label for="inputNameDistrict" class="col-sm-2 col-form-label">District Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputNameDistrict" asp-for="nameDistrict" required>
                                    <span asp-validation-for="nameDistrict" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputCity" class="col-sm-2 col-form-label">City</label>
                                <div class="col-sm-10">
                                    <select class="form-control" id="inputCity" asp-for="idCity" required>
                                        <option value="">Select a City</option>
                                        @foreach (var city in ViewBag.Cities)
                                        {
                                            <option value="@city.Value">@city.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="idCity" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                                </div>
                            </div>
                     
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
