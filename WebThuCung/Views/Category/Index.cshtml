@model IEnumerable<WebThuCung.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách danh mục sản phẩm</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item">Danh mục</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách danh mục sản phẩm</h5>

                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Tạo mới danh mục
                            </a>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên danh mục</th>
                                    <th>Sửa</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.idCategory</td>
                                            <td>@category.nameCategory</td>
                                            <td>
                                                <!-- Nút Edit -->
                                                <a asp-action="Edit" asp-route-id="@category.idCategory" class="btn btn-warning btn-sm">Sửa</a>
                                                <!-- Nút Delete -->

                                            </td>
                                            <td>
                                                <!-- Nút Edit -->

                                                <form asp-action="Delete" asp-route-id="@category.idCategory" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc là bạn muốn xóa danh mục này?');">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Không tìm thấy danh mục.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main --></main><!-- End #main -->
