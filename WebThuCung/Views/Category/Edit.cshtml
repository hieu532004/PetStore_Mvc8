@model WebThuCung.Dto.CategoryDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Danh mục</a></li>
                <li class="breadcrumb-item active">Sửa</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sửa danh mục</h5>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Category Form -->
                        <form asp-action="Edit" method="post">
                            <!-- Category ID (readonly) -->
                            <div class="row mb-3">
                                <label for="inputIdCategory" class="col-sm-2 col-form-label">ID danh mục</label>
                                <div class="col-sm-10">
                                    <!-- Trường hiển thị ID, chỉ đọc -->
                                    <input type="text" class="form-control" id="inputIdCategory" name="idCategoryReadonly" value="@Model.idCategory" readonly />

                                    <!-- Trường ẩn để gửi ID -->
                                    <input type="hidden" name="idCategory" value="@Model.idCategory" />

                                    <span asp-validation-for="idCategory" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Category Name -->
                            <div class="row mb-3">
                                <label for="inputNameCategory" class="col-sm-2 col-form-label">Tên danh mục</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputNameCategory" name="nameCategory" value="@Model.nameCategory" required />
                                    <span asp-validation-for="nameCategory" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                    <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
                                </div>
                            </div>
                           
                        </form><!-- End Edit Category Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

