@model WebThuCung.Dto.CategoryDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Category</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create New Category</h5>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Create Category Form -->
                        <form asp-action="Create" method="post">
                            <!-- Category ID -->
                            <div class="row mb-3">
                                <label for="inputIdCategory" class="col-sm-2 col-form-label">Category ID</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputIdCategory" name="idCategory" value="@Model?.idCategory" required />
                                    <!-- Hiển thị lỗi nếu có -->
                                    <span asp-validation-for="idCategory" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Category Name -->
                            <div class="row mb-3">
                                <label for="inputNameCategory" class="col-sm-2 col-form-label">Category Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputNameCategory" name="nameCategory" value="@Model?.nameCategory" required />
                                    <!-- Hiển thị lỗi nếu có -->
                                    <span asp-validation-for="nameCategory" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Create Category</button>
                                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                                </div>
                            </div>
                          
                        </form><!-- End Create Category Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
