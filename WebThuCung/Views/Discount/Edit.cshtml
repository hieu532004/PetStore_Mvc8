@model WebThuCung.Dto.DiscountDto
@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Discount" asp-action="Index">Giảm giá</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chỉnh sửa Giảm giá</h5>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Discount Form -->
                        <form asp-action="Edit" method="post">
                            <!-- Discount ID (readonly) -->
                            <div class="row mb-3">
                                <label asp-for="idDiscount" class="col-sm-2 col-form-label">Mã Giảm giá</label>
                                <div class="col-sm-10">
                                    <!-- Trường hiển thị ID, chỉ đọc -->
                                    <input asp-for="idDiscount" class="form-control" readonly />
                                    <!-- Hiển thị lỗi nếu có -->
                                    @* <span asp-validation-for="idDiscount" class="text-danger"></span> *@
                                </div>
                            </div>

                            <!-- Product Selection -->
                            <div style="margin-top:7px" class="form-group row">
                                <label asp-for="idProduct" class="col-sm-2 col-form-label">Sản phẩm</label>
                                <div class="col-sm-10">
                                    <select asp-for="idProduct" class="form-control" id="inputProduct" name="idProduct" required>
                                        <option value="">-- Chọn một sản phẩm --</option>
                                        @foreach (var product in ViewBag.Products as List<SelectListItem>)
                                        {
                                            <option value="@product.Value">@product.Text</option>
                                        }
                                    </select>
                                </div>
                                @* <span asp-validation-for="idProduct" class="text-danger"></span> *@
                            </div>

                            <!-- Discount Percent -->
                            <div class="row mb-3">
                                <label asp-for="discountPercent" class="col-sm-2 col-form-label">Phần trăm Giảm giá</label>
                                <div class="col-sm-10">
                                    <input asp-for="discountPercent" class="form-control" placeholder="Phần trăm Giảm giá" required />
                                    <!-- Hiển thị lỗi nếu có -->
                                    @* <span asp-validation-for="discountPercent" class="text-danger"></span> *@
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                                </div>
                            </div>
                     
                        </form><!-- End Edit Discount Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
