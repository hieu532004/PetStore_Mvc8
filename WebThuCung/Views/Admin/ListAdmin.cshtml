@model IEnumerable<WebThuCung.Models.Admin>

@{
    ViewData["Title"] = "ListAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách quản trị</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item">Admin</li>
                <li class="breadcrumb-item active">Danh sách</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách quản trị</h5>
                      
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên người dùng</th>
                                    <th>Email</th>
                                    <th>Tên đầy đủ</th>
                                    <th>Số điện thoại</th>
                                    <th>Avatar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var admin in Model)
                                    {
                                        <tr>
                                            <td>@admin.idAdmin</td>
                                            <td>@admin.userAdmin</td>
                                            <td>@admin.Email</td>
                                            <td>@admin.Name</td>
                                            <td>@admin.Phone</td>
                                            <td>
                                                <img src="~/admin/img/@admin.Avatar" alt="Admin avatar" style="width: 100px; height: auto;" />
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No admins found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main --></main><!-- End #main -->