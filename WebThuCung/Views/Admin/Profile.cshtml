@model Admin

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Profile</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">Users</li>
            <li class="breadcrumb-item active">Profile</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="ok">
    <div class="row">
        <div class="col-xl-4">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <!-- Ảnh hồ sơ -->
                    <img id="imagePreview" src="~/admin/img/@Model.Avatar" alt="Profile" class="rounded-circle" style="width:150px; height:150px; object-fit:cover;" onclick="openMo(); return false;" />

                    <!-- Thông tin tên và chức vụ -->
                    <h2>@Model.userAdmin</h2>
                    @* <h3>@Model.JobTitle</h3> *@

                    <!-- Liên kết mạng xã hội -->
                    <div class="social-links mt-2">
                        <a href="" class="twitter" target="_blank"><i class="bi bi-twitter"></i></a>
                        <a href="" class="facebook" target="_blank"><i class="bi bi-facebook"></i></a>
                        <a href="" class="instagram" target="_blank"><i class="bi bi-instagram"></i></a>
                        <a href="" class="linkedin" target="_blank"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-view="Overview">Overview</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-view="Edit">Edit Profile</button>
                        </li>
                      
                    </ul>

                    <div class="tab-content pt-2">
                       
                            <div id="content-container">
                            @Html.Partial("ProfileOverview")
                            </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="uploadModal" class="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <span class="close" onclick="closeMo();">&times;</span>
            <div class="modal-header">
                <h5 class="modal-title" id="uploadModalLabel">Upload Profile Image</h5>
            </div>
            <form asp-controller="Admin" asp-action="SaveAvatar" id="editForm" method="post" enctype="multipart/form-data">
                <div class="modal-body">

                    <div class="text-center">
                        <img id="modalImagePreview" src="~/admin/img/@Model.Avatar" class="job-image img-thumbnail rounded-circle" style="width: 150px; height: 150px;">
                    </div>
                    <div class="form-group mb-4">
                        <input asp-for="Avatar" type="file" class="file-upload-default" id="avatarUpload" style="display: none;" onchange="uploadImage();" />
                        <button class="custom-button" type="button" onclick="document.getElementById('avatarUpload').click();">Upload Image</button>
                        <input type="text" id="fileNameInput" class="file-name-display mt-2" disabled="" placeholder="No file chosen">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeMo();">Close</button>
                    <button type="submit" class="btn btn-primary" onclick="closeMo();">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function openMo() {
        document.getElementById("uploadModal").style.display = "block";
    }

    // Đóng modal
    function closeMo() {
        document.getElementById("uploadModal").style.display = "none";
    }
    $(document).ready(function () {
        // Đánh dấu mục đang được chọn
        $('.nav-link').click(function () {
            $('.nav-link').removeClass('active'); // Xóa active từ tất cả các mục
            $(this).addClass('active'); // Thêm active vào mục được nhấp

            var view = $(this).data('view'); // Lấy tên view từ data attribute
            var url = ''; // Khởi tạo URL cho Partial View

            if (view === 'Overview') {
                url = '/Admin/LoadProfilePartial'; // URL để tải Partial View _Profile
            } else if (view === 'Edit') {
                url = '/Admin/EditProfilePartial'; // URL để tải Partial View _Address
            } 

            // Gửi yêu cầu Ajax để tải Partial View và cập nhật nội dung của div
            $.ajax({
                url: url,
                type: 'GET',
                success: function (result) {
                    $('#content-container').html(result);
                },
                error: function () {
                    alert('Error loading content. Please try again.');
                }
            });
        });
    });
    $(document).ready(function () {
        // AJAX cho form Change Password
        $('#content-container').on('submit', 'form', function (e) {
            e.preventDefault(); // Ngăn chặn hành động gửi form mặc định

            var form = $(this);
            var url = form.attr('action');
            var method = form.attr('method');

            $.ajax({
                url: url,
                type: method,
                data: form.serialize(), // Lấy dữ liệu từ form
                success: function (result) {
                    $('#content-container').html(result); // Cập nhật nội dung với response
                },
                error: function () {
                    alert('Có lỗi xảy ra. Vui lòng thử lại.');
                }
            });
        });
    });
    function uploadImage() {
        var file = document.getElementById('avatarUpload').files[0];
        var formData = new FormData();
        formData.append("avatar", file);

        $.ajax({
            url: '/Admin/UploadAvatar',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                var preview = document.getElementById('imagePreview');
                var modalPreview = document.getElementById('modalImagePreview');
                var fileNameInput = document.getElementById('fileNameInput');

                // Lấy tên file mà không có phần mở rộng
                var fileNameWithoutExtension = response.fileName.split('.').slice(0, -1).join('.');

                // Cập nhật ảnh xem trước trên trang chính và trong modal
                preview.src = '/admin/img/' + response.fileName;
                modalPreview.src = '/admin/img/' + response.fileName;

                // Cập nhật tên file
                fileNameInput.value = fileNameWithoutExtension;

                // Gọi hàm enableEdit() để kích hoạt chế độ chỉnh sửa
                // enableEdit();
            },
            error: function () {
                alert("File upload failed.");
            }
        });
    }
</script>