@model WebThuCung.Dto.AdminDto

<div  id="profile-edit">
    <!-- Profile Edit Form -->
    <form method="post" asp-action="EditProfile">
        <div class="row mb-3">
            <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Name" type="text" class="form-control" id="fullName" required>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label for="address" class="col-md-4 col-lg-3 col-form-label">Address</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Address" type="text" class="form-control" id="address" required>
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label for="phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Phone" type="text" class="form-control" id="phone" required>
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label for="email" class="col-md-4 col-lg-3 col-form-label">Email</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Email" type="email" class="form-control" id="email" required>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form><!-- End Profile Edit Form -->

</div>
@await Html.PartialAsync("_Notification")