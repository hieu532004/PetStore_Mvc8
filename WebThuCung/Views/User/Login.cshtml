
@model WebThuCung.Dto.LoginDto
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<section id="banner" class="py-3" style="background: #F9F3EC;">
    <div class="container">
        <div class="hero-content py-5 my-3">
            <h2 class="display-1 mt-3 mb-0">Tài khoản</h2>
            <nav class="breadcrumb">
                <a class="breadcrumb-item nav-link" asp-controller="User" asp-action="Index">Trang chủ</a>
                <span class="breadcrumb-item active" aria-current="page">Tài khoản</span>
            </nav>
        </div>
    </div>
</section>

<section class="login-tabs padding-large">
    <div class="container my-5 py-5">
        <div class="row">
            <div class="tabs-listing">
                <nav>
                    <div class="nav nav-tabs d-flex justify-content-center border-dark-subtle mb-3" id="nav-tab" role="tablist">
                        <a class="nav-link mx-3 fs-3 border-bottom border-dark-subtle border-0 text-uppercase" role="button">
                            Đăng nhập
                        </a>
                        <a href="@Url.Action("Register", "User")" class="nav-link mx-3 fs-3 border-bottom border-dark-subtle border-0 text-uppercase active">
                            Đăng ký
                        </a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <!-- Đăng nhập Tab -->
                    <div class="tab-pane fade active show" id="nav-sign-in" role="tabpanel" aria-labelledby="nav-sign-in-tab">
                        <div class="col-lg-8 offset-lg-2 mt-5">
                            <p class="mb-0">Đăng nhập bằng Email hoặc Tên người dùng</p>
                            <hr class="my-1">

                            <form asp-action="Login" method="post">
                                @Html.AntiForgeryToken()

                                <!-- Tóm tắt xác thực -->
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group flex-wrap">
                                    <!-- Tên người dùng hoặc Email -->
                                    <div class="form-input col-lg-12 my-4">
                                        <label asp-for="userName" class="col-form-label">Tên người dùng</label>
                                        <input asp-for="userName" class="form-control mb-3 p-4" placeholder="Nhập tên người dùng hoặc địa chỉ email" style="text-transform: none;" />
                                        <span asp-validation-for="userName" class="text-danger"></span>
                                    </div>

                                    <!-- Mật khẩu -->
                                    <div class="form-input col-lg-12 my-4">
                                        <label asp-for="password" class="col-form-label">Mật khẩu</label>
                                        <input asp-for="password" type="password" class="form-control mb-3 p-4" placeholder="Nhập mật khẩu" style="text-transform: none;" />
                                        <span asp-validation-for="password" class="text-danger"></span>
                                    </div>

                                    <!-- Lưu thông tin và Quên mật khẩu -->
                                    <label class="py-3 d-flex flex-wrap justify-content-between">
                                        <div>
                                            <input type="checkbox" class="d-inline" id="rememberMe" />
                                            <label for="rememberMe" class="label-body">Lưu thông tin</label>
                                        </div>

                                        <div id="passwordHelpBlock" class="form-text">
                                            <a href="@Url.Action("ForgotPassword", "User")" class="text-primary fw-bold">Quên mật khẩu?</a>
                                        </div>
                                    </label>

                                    <!-- Nút Đăng nhập -->
                                    <div class="d-grid my-3">
                                        <input type="submit" value="Đăng nhập" class="btn btn-dark btn-lg rounded-1" />
                                    </div>

                                    <!-- Liên kết đến Đăng ký -->
                                    <p>
                                        <a href="@Url.Action("Register", "User")" class="text-primary fw-bold">Tạo một tài khoản mới</a>
                                    </p>
                                </div>
                            </form><!-- Kết thúc Form Đăng nhập -->
                        </div>
                    </div>

                    <!-- Đăng ký Tab (Không cần thay đổi phần này theo yêu cầu của bạn) -->
                    <div class="tab-pane fade" id="nav-register" role="tabpanel" aria-labelledby="nav-register-tab">
                        <div class="col-lg-8 offset-lg-2 mt-5">
                            <hr class="my-1">
                            <div class="row mt-4 mb-5">
                                <div class="d-grid col-md-6 my-2">
                                    <a href="#" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1 ">
                                        <div class="d-flex flex-wrap justify-content-center">
                                            <iconify-icon icon="ion:logo-google" class="signup-social-icon me-2"></iconify-icon>
                                            <p class="mb-0">Google</p>
                                        </div>
                                    </a>
                                </div>
                                <div class="d-grid col-md-6 my-2">
                                    <a href="#" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1 ">
                                        <div class="d-flex flex-wrap justify-content-center">
                                            <iconify-icon icon="ion:logo-facebook" class="signup-social-icon me-2"></iconify-icon>
                                            <p class="mb-0">Facebook</p>
                                        </div>
                                    </a>
                                </div>
                            </div>

                            <hr class="my-1">

                            <form id="form1" class="form-group flex-wrap">
                                <div class="form-input col-lg-12 my-4">
                                    <input type="text" id="exampleInputName" name="name" placeholder="Tên đầy đủ của bạn" class="form-control mb-3 p-4">
                                    <input type="text" id="exampleInputEmail1" name="email" placeholder="Địa chỉ email của bạn" class="form-control mb-3 p-4">
                                    <input type="password" id="inputPassword1" placeholder="Đặt mật khẩu của bạn" class="form-control mb-3 p-4">
                                    <input type="password" id="inputPassword2" placeholder="Nhập lại mật khẩu của bạn" class="form-control mb-3 p-4">

                                    <label class="py-3 d-flex flex-wrap justify-content-between">
                                        <div>
                                            <input type="checkbox" class="d-inline">
                                            <span class="label-body">Lưu thông tin</span>
                                        </div>

                                        <div id="passwordHelpBlock" class="form-text">
                                            <a href="#" class="text-primary fw-bold">Quên mật khẩu?</a>
                                        </div>
                                    </label>

                                    <div class="d-grid my-3">
                                        <a href="#" class="btn btn-dark btn-lg rounded-1">Đăng ký</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
