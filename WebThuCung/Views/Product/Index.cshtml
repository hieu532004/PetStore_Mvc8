@model IEnumerable<WebThuCung.Dto.ProductViewDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Product List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Product</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Product List</h5>

                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Create New Product
                            </a>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name Product</th>
                                    <th>Sell Price</th>
                                    <th>Branch</th>
                                    <th>Category</th>
                                    <th>Quantity</th>
                                    <th>Image</th>
                                    <th>Size</th> <!-- Cột Size -->
                                    <th>Color</th> <!-- Cột Color -->
                                    <th>Image Products</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>@product.idProduct</td>
                                            <td>@product.nameProduct</td>
                                            <td>@product.DiscountedPrice</td>
                                            <td>@product.nameBranch</td>
                                            <td>@product.nameCategory</td>
                                            <td>@product.Quantity</td>
                                            <td>
                                                <img src="~/images/@product.Image" alt="Product Image" style="width: 100px; height: auto;" />
                                            </td>
                                            <td>
                                                <a asp-controller="Size" asp-action="SizeProduct" asp-route-id="@product.idProduct" class="btn btn-info btn-sm">View Sizes</a>
                                            </td>
                                            <td>
                                                <a asp-controller="Color" asp-action="ColorProduct" asp-route-id="@product.idProduct" class="btn btn-info btn-sm">View Colors</a>
                                            </td>
                                            <td>
                                                <a  asp-controller="ImageProduct" asp-action="ImageProduct" asp-route-id="@product.idProduct" class="btn btn-info btn-sm">View Images</a>
                                            </td>
                                            <td>
                                                <!-- Nút Edit -->
                                                <a asp-action="Edit" asp-route-id="@product.idProduct" class="btn btn-warning btn-sm">Edit</a>
                                                <!-- Nút Delete -->

                                            </td>
                                            <td>
                                                <!-- Nút Edit -->

                                                <form asp-action="Delete" asp-route-id="@product.idProduct" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Category?');">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No products found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main --></main><!-- End #main -->
