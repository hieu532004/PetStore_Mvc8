@model IEnumerable<WebThuCung.Dto.ProductViewDto>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách sản phẩm</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item">Sản phẩm</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách sản phẩm</h5>

                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Tạo sản phẩm mới
                            </a>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá bán</th>
                                    <th>Thương hiệu</th>
                                    <th>Danh mục</th>
                                    <th>Số lượng</th>
                                    <th>Hình ảnh</th>
                                    <th>Kích thước</th>
                                    <th>Màu sắc</th>
                                    <th>Hình ảnh sản phẩm</th>
                                    <th>Chỉnh sửa</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>@product.idProduct</td>
                                            <td>@product.nameProduct</td>
                                            <td>@product.DiscountedPrice</td>
                                            <td>@product.nameBranch</td>
                                            <td>@product.nameCategory</td>
                                            <td>@product.Quantity</td>
                                            <td>
                                                <img src="~/images/@product.Image" alt="Hình ảnh sản phẩm" style="width: 100px; height: auto;" />
                                            </td>
                                            <td>
                                                <a asp-controller="Size" asp-action="SizeProduct" asp-route-id="@product.idProduct" class="btn btn-info btn-sm">Xem kích thước</a>
                                            </td>
                                            <td>
                                                <a asp-controller="Color" asp-action="ColorProduct" asp-route-id="@product.idProduct" class="btn btn-info btn-sm">Xem màu sắc</a>
                                            </td>
                                            <td>
                                                <a asp-controller="ImageProduct" asp-action="ImageProduct" asp-route-id="@product.idProduct" class="btn btn-info btn-sm">Xem hình ảnh</a>
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@product.idProduct" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                                            </td>
                                            <td>
                                                <form asp-action="Delete" asp-route-id="@product.idProduct" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="12" class="text-center">Không tìm thấy sản phẩm nào.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
