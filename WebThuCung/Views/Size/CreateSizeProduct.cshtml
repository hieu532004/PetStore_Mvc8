@model WebThuCung.Models.ProductSize

@{
    ViewData["Title"] = "Size List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Size" asp-action="Index">Size</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add Size for Product</h5>

                        <!-- Display validation summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Create Product Size Form -->
                        <form asp-action="CreateSizeProduct" method="post">
                            <!-- Hidden field for Product ID -->
                            <input type="hidden" asp-for="idProduct" value="@ViewBag.ProductId" />

                            <!-- Size Selection -->
                            <div class="row mb-3">
                                <label asp-for="idSize" class="col-sm-2 col-form-label">Size</label>
                                <div class="col-sm-10">
                                    <select asp-for="idSize" class="form-control" required>
                                        <option value="">-- Select a Size --</option>
                                        @foreach (var size in ViewBag.SizeList as List<SelectListItem>)
                                        {
                                            <option value="@size.Value">@size.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                    <a asp-action="SizeProduct" asp-route-id="@ViewBag.ProductId" class="btn btn-secondary">Back</a>
                                </div>
                            </div>
                            
                        </form><!-- End Create Product Size Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
