@model WebThuCung.Dto.SizeDto
@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Size" asp-action="Index">Kích thước</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chỉnh sửa kích thước</h5>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Size Form -->
                        <form asp-action="Edit" method="post">
                            <!-- Size ID (readonly) -->
                            <div class="row mb-3">
                                <label asp-for="idSize" class="col-sm-2 col-form-label">Mã kích thước</label>
                                <div class="col-sm-10">
                                    <!-- Trường hiển thị ID, chỉ đọc -->
                                    <input asp-for="idSize" class="form-control" readonly />
                                    <!-- Hiển thị lỗi nếu có -->
                                    @* <span asp-validation-for="idSize" class="text-danger"></span> *@
                                </div>
                            </div>

                            <!-- Size Name -->
                            <div class="row mb-3">
                                <label asp-for="nameSize" class="col-sm-2 col-form-label">Tên kích thước</label>
                                <div class="col-sm-10">
                                    <input asp-for="nameSize" class="form-control" placeholder="Tên kích thước" required />
                                    <!-- Hiển thị lỗi nếu có -->
                                    @* <span asp-validation-for="nameSize" class="text-danger"></span> *@
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                                </div>
                            </div>
                           
                        </form><!-- End Edit Size Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
