@model WebThuCung.Dto.OrderDto
@{
    ViewData["Title"] = "Edit Order";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Edit Order</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Order" asp-action="Index">Order</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Edit Order</h5>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Order Form -->
                        <form asp-action="Edit" method="post">
                            <!-- Order ID (readonly) -->
                            <div class="row mb-3">
                                <label asp-for="idOrder" class="col-sm-2 col-form-label">Order ID</label>
                                <div class="col-sm-10">
                                    <input asp-for="idOrder" class="form-control" readonly />
                                    <span asp-validation-for="idOrder" class="text-danger"></span>
                                    <!-- Hidden field for ID -->
                                    <input type="hidden" asp-for="idOrder" />
                                </div>
                            </div>

                            <!-- Customer Selection -->
                            <div class="row mb-3">
                                <label asp-for="idCustomer" class="col-sm-2 col-form-label">Customer</label>
                                <div class="col-sm-10">
                                    <select asp-for="idCustomer" class="form-control" required>
                                        <option value="">-- Select a Customer --</option>
                                        @foreach (var customer in ViewBag.Customers as List<SelectListItem>)
                                        {
                                            <option value="@customer.Value">@customer.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="idCustomer" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Date To -->
                            <div class="row mb-3">
                                <label asp-for="dateTo" class="col-sm-2 col-form-label">Date To</label>
                                <div class="col-sm-10">
                                    <input asp-for="dateTo" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="dateTo" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Order Status -->
                            <div class="row mb-3">
                                <label asp-for="statusOrder" class="col-sm-2 col-form-label">Order Status</label>
                                <div class="col-sm-10">
                                    <select asp-for="statusOrder" class="form-control">
                                        <option value="">-- Select Order Status --</option>
                                        <option value="Pending">Pending</option>
                                        <option value="Accepted">Accepted</option>
                                        <option value="Rejected">Rejected</option>
                                        <option value="Complete">Complete</option>

                                    </select>
                                    <span asp-validation-for="statusOrder" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Payment Status -->
                            <div class="row mb-3">
                                <label asp-for="statusPay" class="col-sm-2 col-form-label">Payment Status</label>
                                <div class="col-sm-10">
                                    <select asp-for="statusPay" class="form-control">
                                        <option value="">-- Select Payment Status --</option>
                                        <option value="Paid">Paid</option>
                                        <option value="Unpaid">UnPaid</option>
                                        <option value="Refunded">Refunded</option>

                                    </select>
                                    <span asp-validation-for="statusPay" class="text-danger"></span>
                                </div>
                            </div>


                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                                </div>
                            </div>
                            
                        </form><!-- End Edit Order Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
