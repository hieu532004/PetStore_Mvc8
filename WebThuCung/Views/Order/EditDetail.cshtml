
@model WebThuCung.Dto.DetailOrderDto

@{
    ViewData["Title"] = "Chỉnh sửa chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Chỉnh sửa chi tiết đơn hàng</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Order" asp-action="Detail" asp-route-id="@Model.idOrder">Chi tiết đơn hàng</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chỉnh sửa chi tiết đơn hàng</h5>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Detail Order Form -->
                        <form asp-action="EditDetail" method="post">
                            <!-- Detail Order ID (readonly) -->
                            <div class="row mb-3">
                                <label asp-for="idDetailOrder" class="col-sm-2 col-form-label">Mã chi tiết đơn hàng</label>
                                <div class="col-sm-10">
                                    <input asp-for="idDetailOrder" class="form-control" readonly />
                                    <span asp-validation-for="idDetailOrder" class="text-danger"></span>
                                    <!-- Hidden field for Detail Order ID -->
                                    <input type="hidden" asp-for="idDetailOrder" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="idOrder" class="col-sm-2 col-form-label">Mã đơn hàng</label>
                                <div class="col-sm-10">
                                    <input asp-for="idOrder" class="form-control" readonly value="@Model.idOrder" />
                                    <span asp-validation-for="idOrder" class="text-danger"></span>
                                    <!-- Hidden field for ID -->
                                    <input type="hidden" asp-for="idOrder" value="@Model.idOrder" />
                                </div>
                            </div>

                            <!-- Product Selection -->
                            <div class="row mb-3">
                                <label asp-for="idProduct" class="col-sm-2 col-form-label">Sản phẩm</label>
                                <div class="col-sm-10">
                                    <select asp-for="idProduct" class="form-control" required>
                                        <option value="">-- Chọn sản phẩm --</option>
                                        @foreach (var product in ViewBag.Products as List<SelectListItem>)
                                        {
                                            <option value="@product.Value">@product.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="idProduct" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label asp-for="nameSize" class="col-sm-2 col-form-label">Kích thước</label>
                                <div class="col-sm-10">
                                    <select asp-for="nameSize" class="form-control" required>
                                        <option value="">-- Chọn kích thước --</option>
                                        @foreach (var size in ViewBag.Sizes as List<SelectListItem>)
                                        {
                                            <option value="@size.Text">@size.Text</option> <!-- Sử dụng nameSize -->
                                        }
                                    </select>
                                    <span asp-validation-for="nameSize" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Color Selection -->
                            <div class="row mb-3">
                                <label asp-for="nameColor" class="col-sm-2 col-form-label">Màu sắc</label>
                                <div class="col-sm-10">
                                    <select asp-for="nameColor" class="form-control" required>
                                        <option value="">-- Chọn màu sắc --</option>
                                        @foreach (var color in ViewBag.Colors as List<SelectListItem>)
                                        {
                                            <option value="@color.Text">@color.Text</option> <!-- Sử dụng nameColor -->
                                        }
                                    </select>
                                    <span asp-validation-for="nameColor" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Quantity -->
                            <div class="row mb-3">
                                <label asp-for="Quantity" class="col-sm-2 col-form-label">Số lượng</label>
                                <div class="col-sm-10">
                                    <input asp-for="Quantity" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <a asp-action="Detail" asp-route-id="@Model.idOrder" class="btn btn-primary">Quay lại</a>
                                </div>
                            </div>
                        </form><!-- End Edit Detail Order Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
